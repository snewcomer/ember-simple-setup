{{#with (changeset model validations) as |changeset|}}
<div class="form-wrapper">
  <form role="form" autocomplete=off {{action (perform signin model) on="submit"}}>
    
    <h2>{{t "login"}}</h2>

    {{validated-input 
      model=model
      valuePath="username"
      changeset=changeset
      required=true
      placeholder=(t "username")
      showError=false
    }}

    {{validated-input 
      model=model
      valuePath="password"
      changeset=changeset
      required=true
      placeholder=(t "password.one")
      type="password"
      showError=false
    }}

    <button 
      role="button" 
      type="submit" 
      disabled={{if (or changeset.isInvalid signin.isRunning) "disabled"}} 
      onclick={{action "validate" changeset}}>{{t "login"}}</button>

    <div class="form-misc">
      {{#link-to "password.forgot"}}{{t "password.forgot"}}{{/link-to}}
    </div>
  </form>
</div>
{{/with}}